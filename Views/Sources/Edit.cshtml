@model SourceEditViewModel

@{
    ViewData["Title"] = "Редакция на източник";
    Layout = "~/Views/Shared/_LayoutNews.cshtml";
}

@{
    var modelTitle = "ЛИПСВА ЗАГЛАВИЕ";
    if (!string.IsNullOrEmpty(Model.Title))
    {
        modelTitle = Model.Title;
    }
}

@section breadcrumb {
    <a asp-action="Index" asp-controller="Sources">Индекс</a>

    <span class="separator">/</span>

    <a asp-action="Details" asp-controller="Sources" asp-route-id="@Model.Id">@modelTitle</a>

    <span class="separator">/</span>

    <a asp-action="Edit" asp-controller="Sources" asp-route-id="@Model.Id">Редакция</a>
}

<div class="col-lg-8 blog-main">
    <article class="blog-post" id="post">

        <h2 class="underlined">@ViewData["Title"]</h2>

        <form asp-action="Edit">

            <div class="form-group" str-validation-for="Title" str-error-class="has-error">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="checkbox text-right">
                <label asp-for="IsTranslation" class="control-label">
                    <input asp-for="IsTranslation" /> <b> @Html.DisplayNameFor(x => x.IsTranslation) </b>
                </label>
            </div>

            <div class="form-group" str-validation-for="Description" str-error-class="has-error">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="form-group col-md-6 col-md-offset-6 text-right" str-validation-for="CategoryId" str-error-class="has-error">
                    <label asp-for="CategoryId" class="control-label"></label>
                    <select asp-for="CategoryId" asp-items="Model.Categories" class="form-control">
                        <option value="">Моля, изберете категория</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
            </div>

            <hr />

            <div class="row">
                <div class="form-group col-md-5 col-md-offset-1" str-validation-for="FirstName" str-error-class="has-error">
                    <label asp-for="FirstName" class="control-label"></label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="form-group col-md-5" str-validation-for="LastName" str-error-class="has-error">
                    <label asp-for="LastName" class="control-label"></label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="form-group col-md-10 col-md-offset-1" str-validation-for="Origin" str-error-class="has-error">
                    <label asp-for="Origin" class="control-label"></label>
                    <input asp-for="Origin" class="form-control" />
                    <span asp-validation-for="Origin" class="text-danger"></span>

                    <p class="help-block">
                        <small>
                            Двете имена се използват за да се намери и свърже автора на произведението с потребителски акаунт в системата.
                            Произходът на произведението се показва в индекса.
                        </small>
                    </p>
                </div>

            </div>

            <div class="row">
                <div class="form-group col-sm-2 col-sm-offset-1" str-validation-for="ReleaseNumber" str-error-class="has-error">
                    <label asp-for="ReleaseNumber" class="control-label"></label>
                    <input asp-for="ReleaseNumber" class="form-control" />
                    <span asp-validation-for="ReleaseNumber" class="text-danger"></span>
                </div>

                <div class="form-group col-sm-3" str-validation-for="ReleaseYear" str-error-class="has-error">
                    <label asp-for="ReleaseYear" class="control-label"></label>
                    <input asp-for="ReleaseYear" class="form-control" />
                    <span asp-validation-for="ReleaseYear" class="text-danger"></span>
                </div>

                <div class="form-group col-sm-3" str-validation-for="Pages" str-error-class="has-error">
                    <label asp-for="Pages" class="control-label"></label>
                    <input asp-for="Pages" class="form-control" />
                    <span asp-validation-for="Pages" class="text-danger"></span>
                </div>

                <div class="form-group col-sm-2" str-validation-for="StartingPage" str-error-class="has-error">
                    <label asp-for="StartingPage" class="control-label"></label>
                    <input asp-for="StartingPage" class="form-control" />
                    <span asp-validation-for="StartingPage" class="text-danger"></span>
                </div>
            </div>

            <hr />

            <div class="row">
                <div class="form-group col-md-12">
                    <label asp-for="Notes" class="control-label"></label>
                    <textarea asp-for="Notes" class="form-control" rows="5"></textarea>
                </div>
            </div>

            <hr />

            <div class="row">
                <div class="form-group col-md-4">
                    <label asp-for="LastUpdated" class="control-label"></label>
                    <input asp-for="LastUpdated" class="form-control text-center" readonly="readonly" type="text" />
                </div>

                <div class="form-group col-md-4">
                    <label asp-for="Uploader" class="control-label"></label>
                    <input asp-for="Uploader" class="form-control" readonly="readonly" />
                </div>

                <div class="form-group col-sm-4">
                    <label asp-for="DateCreated" class="control-label"></label>
                    <input asp-for="DateCreated" class="form-control text-center" readonly="readonly" type="text" />
                </div>
            </div>

            <hr />

            <div class="form-group text-right">
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-default">Отказ</a>
                <input type="submit" value="Запис" class="btn btn-tales-one" />
            </div>
        </form>

    </article>
</div>

<aside class="col-lg-4 blog-aside">

    <div class="aside-widget">

        <header>
            <h3>Навигация</h3>
        </header>
        <div class="body">
            <ul class="tales-list">
                <li><a asp-action="Create" asp-controller="Sources">Създаване на нов източник</a></li>

                @if (Model.IssueId.HasValue)
                {
                    <li><a asp-action="Details" asp-controller="Issues" asp-route-id="@Model.IssueId">Преглед на свързан брой</a></li>
                }

                @if (Model.AuthorId != null)
                {
                    @* TODO: Wire this to an author preview page *@
                    <li><a asp-area="Identity" asp-page="/Account/Manage/Index">Преглед на свързан автор</a></li>
                }
                <li><a asp-action="Details" asp-controller="Categories" asp-route-id="@Model.CategoryId">Преглед на категория</a></li>
                @*<li><a asp-action="Index" asp-controller="Sources">Към индекс</a></li>*@

                @if (User.IsAtLeast(StranitzaRoles.HeadEditor))
                {
                    <li><a asp-action="Delete" asp-controller="Sources" asp-route-id="@Model.Id">Изтриване</a></li>
                }

                <li><a asp-action="Details" asp-controller="Sources" asp-route-id="@Model.Id">Обратно към преглед</a></li>
            </ul>
        </div>
    </div>
</aside>

@section scripts {

    @await Html.PartialAsync("_ValidationScripts")

    <script>
        function keepAlive() {
            setInterval(function() {
                $.get('@Url.Action("Ping", "Home")');
            }, 5E3);
        }

        $(document).ready(function() {
            keepAlive();
        });
    </script>
}