@model PageViewModel

<form asp-action="Edit" method="post" class="edit-page form-horizontal">
    <div class="body row">
        <input type="hidden" name="Id" value="@Model.Id" />
        <input type="hidden" name="IssueId" value="@Model.IssueId" />        
        
        <div class="form-group text-center">
            <label class="control-label col-md-6">Страница №</label>
            <div class="col-md-5">
                 <input name="PageNumber" value="@Model.PageNumber" class="form-control text-center" type="number"/>
            </div>
        </div>
        
        <div class="form-group text-center">
            <label class="control-label col-md-6">Пореден №</label>
            <div class="col-md-5">
                 <input name="SlideNumber" value="@Model.SlideNumber" class="form-control text-center" type="number"/>
            </div>
        </div>

        <div class="col-xs-12">
            <select class="form-control" name="Type">
                @switch (Model.Type)
                {
                    case StranitzaPageType.Missing:
                        <option value="@((int)StranitzaPageType.Cover)">Корица</option>
                        <option value="@((int)StranitzaPageType.Index)">Съдържание</option>
                        <option value="@((int)StranitzaPageType.Regular)">Обикновена</option>
                        <option value="@((int)StranitzaPageType.Missing)" selected="selected">Липсваща</option>
                        break;
                    case StranitzaPageType.Regular:
                        <option value="@((int)StranitzaPageType.Cover)">Корица</option>
                        <option value="@((int)StranitzaPageType.Index)">Съдържание</option>
                        <option value="@((int)StranitzaPageType.Regular)" selected="selected">Обикновена</option>
                        <option value="@((int)StranitzaPageType.Missing)">Липсваща</option>
                        break;
                    case StranitzaPageType.Index:
                        <option value="@((int)StranitzaPageType.Cover)">Корица</option>
                        <option value="@((int)StranitzaPageType.Index)" selected="selected">Съдържание</option>
                        <option value="@((int)StranitzaPageType.Regular)">Обикновена</option>
                        <option value="@((int)StranitzaPageType.Missing)">Липсваща</option>
                        break;
                    case StranitzaPageType.Cover:
                        <option value="@((int)StranitzaPageType.Cover)" selected="selected">Корица</option>
                        <option value="@((int)StranitzaPageType.Index)">Съдържание</option>
                        <option value="@((int)StranitzaPageType.Regular)">Обикновена</option>
                        <option value="@((int)StranitzaPageType.Missing)">Липсваща</option>
                        break;
                    default:
                        <option value="@((int)StranitzaPageType.Cover)">Корица</option>
                        <option value="@((int)StranitzaPageType.Index)">Съдържание</option>
                        <option value="@((int)StranitzaPageType.Regular)">Обикновена</option>
                        <option value="@((int)StranitzaPageType.Missing)">Липсваща</option>
                        break;
                }
            </select>
        </div>

        <div class="col-xs-12">
            <div class="checkbox text-right">
                <label class="control-label">
                   
                    <input type="checkbox" name="IsAvailable" value="true" @(Model.IsAvailable ? "checked=\"checked\"" : string.Empty)/> <b> @Html.DisplayNameFor(x => x.IsAvailable) </b>
                </label>
            </div>
        </div>
    </div>

    <div class="clearfix">
        <input type="submit" class="submit-page btn btn-tales-one" value="Запис" disabled="disabled" />
    </div>
</form>
