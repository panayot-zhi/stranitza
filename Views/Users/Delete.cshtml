@model UserDetailsViewModel

@{
    ViewData["Title"] = "Изтриване на потребителски профил";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section breadcrumb {

    <a asp-page="/Account/Manage/Admin" asp-area="Identity">Администрация</a>

    <span class="separator">/</span>

    <a asp-action="Index" asp-controller="Users">Потребители</a>

    <span class="separator">/</span>

    <a asp-action="Edit" asp-controller="Users" asp-route-id="@Model.Id">@Model.DisplayNameOnly</a>

    <span class="separator">/</span>

    <a asp-action="Delete" asp-controller="Users" asp-route-id="@Model.Id">Изтриване</a>
}

<div class="col-md-8 blog-main">
    <h2 class="underlined">Изтриване на потребителски профил</h2>

    <input type="hidden" asp-for="Id"/>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="row">
        <div class="col-md-4 form-group">
            <label asp-for="FirstName" class="control-label"></label>
            <input asp-for="FirstName" class="form-control" readonly="readonly"/>
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

        <div class="col-md-4 form-group">
            <label asp-for="LastName" class="control-label"></label>
            <input asp-for="LastName" class="form-control" readonly="readonly"/>
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

        <div class="col-md-4 form-group">
            <label asp-for="UserName" class="control-label"></label>
            <input asp-for="UserName" class="form-control" readonly="readonly"/>
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
    </div>

    <div class="checkbox text-right">
        <label asp-for="IsAuthor" class="control-label">
            <input asp-for="IsAuthor" disabled="disabled"/> <b> @Html.DisplayNameFor(x => x.IsAuthor) </b>
        </label>
    </div>

    <div class="row">
        <div class="col-md-4 form-group">
            <label asp-for="Email" class="control-label"></label>
            <input asp-for="Email" class="form-control" readonly="readonly"/>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="col-md-4 form-group">
            <label asp-for="PhoneNumber" class="control-label"></label>
            <input asp-for="PhoneNumber" class="form-control" readonly="readonly"/>
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

        <div class="col-md-4 form-group">
            <label asp-for="DisplayNameType" class="control-label"></label>
            <select asp-for="DisplayNameType" class="form-control" asp-items="Html.GetEnumSelectList<StranitzaDisplayNameType>()" disabled="disabled"></select>
            <span asp-validation-for="DisplayNameType" class="text-danger"></span>
        </div>
    </div>

    <div class="row checkbox-row">
        <div class="col-md-4 checkbox text-right">
            <label asp-for="EmailConfirmed" class="control-label">
                <input asp-for="EmailConfirmed" disabled="disabled"/> <b> @Html.DisplayNameFor(x => x.EmailConfirmed) </b>
            </label>
        </div>

        <div class="col-md-4 checkbox text-right">
            <label asp-for="PhoneNumberConfirmed" class="control-label">
                <input asp-for="PhoneNumberConfirmed" disabled="disabled"/> <b> @Html.DisplayNameFor(x => x.PhoneNumberConfirmed) </b>
            </label>
        </div>

        <div class="col-md-4 checkbox text-right">
            <label asp-for="DisplayEmail" class="control-label">
                <input asp-for="DisplayEmail" disabled="disabled"/> <b> @Html.DisplayNameFor(x => x.DisplayEmail) </b>
            </label>
        </div>
    </div>

    <hr/>

    <div class="row">
        <div class="col-md-3 form-group">
            <label asp-for="AccessFailedCount" class="control-label"></label>
            <input asp-for="AccessFailedCount" class="form-control" readonly="readonly"/>
            <span asp-validation-for="AccessFailedCount" class="text-danger"></span>
        </div>

        <div class="col-md-5 form-group">
            <label asp-for="LockoutEnd" class="control-label"></label>
            <input asp-for="LockoutEnd" class="form-control" readonly="readonly"/>
            <span asp-validation-for="LockoutEnd" class="text-danger"></span>
        </div>

        <div class="col-md-4 form-group">
            <label asp-for="Role" class="control-label"></label>
            <select asp-for="Role" class="form-control" asp-items="Html.GetEnumSelectList<StranitzaRoles>()" disabled="disabled"></select>
            <span asp-validation-for="Roles" class="text-danger"></span>
        </div>
    </div>

    <hr/>

    <div class="row">
        <div class="col-md-4 form-group">
            <label asp-for="LastUpdated" class="control-label"></label>
            <input asp-for="LastUpdated" class="form-control" type="text" readonly="readonly"/>
        </div>

        <div class="col-md-4 col-md-offset-4 form-group">
            <label asp-for="DateCreated" class="control-label"></label>
            <input asp-for="DateCreated" class="form-control" type="text" readonly="readonly"/>
        </div>
    </div>

    <hr/>

    <div class="row text-right">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id"/>
            <a asp-action="Details" asp-route-id="@Model.Id">Отказ</a> |
            <input type="submit" value="Потвърди" class="btn btn-danger"/>
        </form>
    </div>
</div>